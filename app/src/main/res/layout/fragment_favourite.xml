<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavouriteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/midpoint"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/FragTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_placeholder"/>

        <ImageView
            android:id="@+id/SpaceImage"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@android:drawable/picture_frame"
            android:layout_centerInParent="true"
            android:layout_below="@id/FragTitle"/>

        <TextView
            android:id="@+id/FragDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SpaceImage"
            android:scrollbars = "vertical"
            android:gravity="center"
            android:text="@string/date_placeholder"/>

        <TextView
            android:id="@+id/FragDesc"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_below="@+id/FragDate"
            android:scrollbars="vertical"
            android:text="@string/description_placeholder"/>

        <Button
            android:id="@+id/ToImageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/FragDesc"
            android:text="@string/goToImage"/>


    </RelativeLayout>

</FrameLayout>